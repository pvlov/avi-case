model MedicalDocument {
  id          String       @id @default(cuid())
  patientName String
  dateIssued  DateTime
  doctorName  String
  diagnosis   String       @db.Text
  medications Medication[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("medical_documents")
}

model Medication {
  id           String         @id @default(cuid())
  name         String
  dosage       String
  frequency    String
  duration     String
  document     MedicalDocument @relation(fields: [documentId], references: [id])
  documentId   String

  @@map("medications")
} 